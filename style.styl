@import 'imports'

.graph-remove
  position: absolute
  z-index 2
  right: 5px
  top: 5px
  cursor: pointer
  color: $gray

.graph-resize
  position: absolute
  top: auto
  transform: rotate(45deg)
  right: 3px
  bottom: 3px
  color: $gray
  cursor: se-resize

.launchEditModal
  position absolute
  z-index 2
  top 5px
  left 5px
  color: $gray

.react-resizable
  position: relative

.react-draggable-active
  user-select: none

.react-resizable-handle.react-draggable
  position: absolute
  width: 20px
  height: 20px
  background-position: bottom right
  padding: 0 3px 3px 0
  background-repeat: no-repeat
  background-origin: content-box
  box-sizing: border-box
  cursor: se-resize

.quandl-month-day, .ct-chart .ct-label.ct-vertical
  font-size: 10px
  color: black

.x-axis-label
  position absolute
  bottom 0
  left 0
  right 0
  color $gray-light
  text-align center
  font-size 10px

.y-axis-label
  position absolute
  left -5px
  top 45%
  color $gray-light
  transform rotate(90deg)
  font-size 10px

.graph-title-label
  position absolute
  top 0
  left 0
  right 0
  text-align center

.btn-toolbar
  margin-left 5px
  margin-top 10px

path.ct-area
  fill #4688F1 !important